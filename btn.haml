!!! XML
%svg{'xmlns'    => "http://www.w3.org/2000/svg",
  'xmlns:xlink' => "http://www.w3.org/1999/xlink",
  'width'       => "90",
  'height'      => "18"}
  %linearGradient{'id' => 'a', 'x2' => 0, 'y2' => '100%'}
    %stop{'offset' => '0',
          'stop-color' => "##{opts[:color]}",
          'stop-opacity' => '.7'}
    %stop{'offset' => '.1',
          'stop-color' => '#aaa',
          'stop-opacity' => '.1'}
    %stop{'offset' => '1',
          'stop-opacity' => '.5'}
  %rect{'rx' => '4',
        'width' => '90',
        'height' => '18',
        'fill' => '#555'}

  %rect{'rx' => '4',
        'x' => '37',
        'width' => '53',
        'height' => '18',
        'fill' => "##{opts[:bg_color]}"}

  %path{'fill' => "##{opts[:bg_color]}",
        'd' => 'M37 0h4v18h-4z'}

  %rect{'rx'     => '4',
        'width'  => '90',
        'height' => '18',
        'fill'   => 'url(#a)'}

  %g{'fill' => "##{opts[:color]}",
     'text-anchor' => 'middle',
     'font-family' => 'Verdana,Geneva,sans-serif',
     'font-size'   => '11'}
    %a#link{'xlink:href' => "#{opts[:button_url]}",
            'target' => '_new'}
      %text{'x' => '19.5',
            'y' => '13',
            'fill' => "##{opts[:color]}"}= opts[:button_text]
    %a#count-link{'xlink:href' => "#{opts[:count_url]}",
                  'target' => '_new'}
      %text#count{'x' => '62.5',
            'y' => '13',
            'fill' => "##{opts[:color]}"}= opts[:count]
